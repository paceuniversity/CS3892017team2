<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/scroll4"
    tools:context="com.example.faxianchina.faxian.Changsha">


    <LinearLayout
        android:id="@+id/Archers"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:layout_marginBottom="302dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/archers"
            android:layout_width="55dp"
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.747" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:text="Have:" />

        <TextView
            android:id="@+id/haveArchers"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="x 10 coins" />

        <Button
            android:id="@+id/buyArchers"
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:text="Buy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Swordmen"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:layout_marginBottom="238dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/swordman"
            android:layout_width="55dp"
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.747" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:text="Have:" />

        <TextView
            android:id="@+id/haveSwordmen"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="x 10 coins" />

        <Button
            android:id="@+id/buySwordmen"
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:text="Buy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Spearmen"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61">

        <ImageView
            android:id="@+id/spearman"
            android:layout_width="55dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.604" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:text="Have:" />

        <TextView
            android:id="@+id/haveSpearmen"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:text="TextView" />

        <EditText
            android:id="@+id/spearmenNum"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="x 10 coins" />

        <Button
            android:id="@+id/buySpearmen"
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Buy"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="41dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Cavalry"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/cavalry"
            android:layout_width="55dp"
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.747" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:text="Have:" />

        <TextView
            android:id="@+id/haveCavalry"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/cavalryNum"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="x 10 coins" />

        <Button
            android:id="@+id/buyCavalry"
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:text="Buy" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
