<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/scroll4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.faxianchina.faxian.Frag_Market">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/Bows"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <LinearLayout
        android:id="@+id/Bows"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324">

        <ImageView
            android:id="@+id/bow"
            android:layout_width="55dp"
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.747" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:text="Have:" />

        <TextView
            android:id="@+id/haveBows"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/bowNum"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="x 10 coins" />

        <Button
            android:id="@+id/buyBows"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:text="Buy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Sword"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467">

        <ImageView
            android:id="@+id/sword"
            android:layout_width="55dp"
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.747" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:text="Have:" />

        <TextView
            android:id="@+id/haveSwords"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/swordNum"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="x 10 coins" />

        <Button
            android:id="@+id/buySwords"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:text="Buy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Spears"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61">

        <ImageView
            android:id="@+id/spear"
            android:layout_width="55dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.604" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:text="Have:" />

        <TextView
            android:id="@+id/haveSpears"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:text="TextView" />

        <EditText
            android:id="@+id/spearNum"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="x 10 coins" />

        <Button
            android:id="@+id/buySpears"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Buy"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="41dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Horses"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Spears"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/horse"
            android:layout_width="55dp"
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.747" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:text="Have:" />

        <TextView
            android:id="@+id/haveHorses"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/horseNum"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="x 10 coins" />

        <Button
            android:id="@+id/buyHorses"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:text="Buy" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
